{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -e ./.env.local -- concurrently --raw \"docker-compose up -d\" \"turbo run dev --color --parallel\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "test": "jest",
    "storybook:dev": "dotenv -e ./.env.local -- storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build",
    "multiplayer:server": "cross-env HOST=localhost PORT=1234 npx y-websocket-server",
    "multiplayer:test": "dotenv -e ./.env.local -- concurrently --raw \"yarn multiplayer:server\" \"turbo run dev --filter=@storiny/editor\"",
    "multiplayer:dev": "dotenv -e ./.env.local -- concurrently --raw \"yarn multiplayer:server\" \"yarn storybook:dev\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@grpc/grpc-js": "^1.8.15",
    "@playwright/test": "^1.37.1",
    "@storiny/eslint-config": "*",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-essentials": "7.3.2",
    "@storybook/addon-interactions": "7.3.2",
    "@storybook/addon-links": "7.3.2",
    "@storybook/addon-storysource": "^7.3.2",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "7.3.2",
    "@storybook/nextjs": "^7.3.2",
    "@storybook/react": "7.3.2",
    "@storybook/theming": "^7.3.2",
    "@swc/core": "^1.3.61",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/lodash.throttle": "^4.1.7",
    "@types/node": "^20.3.2",
    "concurrently": "^8.2.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^29.5.0",
    "msw": "^1.2.1",
    "msw-storybook-addon": "^1.8.0",
    "nanoid": "3",
    "next": "^13.4.19",
    "nodemon": "^2.0.22",
    "pexels": "^1.4.0",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "7.3.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "5.0.4",
    "webpack": "^5.88.0",
    "y-websocket-server": "^1.0.2"
  },
  "packageManager": "yarn@3.6.0",
  "name": "@storiny/monorepo",
  "msw": {
    "workerDirectory": ".storybook\\public"
  }
}
