{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env.local",
    ".env"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "dev": {
      "cache": false
    },
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "passThroughEnv": ["SENTRY_AUTH_TOKEN"]
    },
    "test": {},
    "realms:test": {},
    "deploy": {
      "dependsOn": [
        "build",
        "test"
      ]
    },
    "lint": {}
  }
}