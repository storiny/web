{
  "extends": "@storiny/tsconfig/react-library.json",
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      // @storiny/ui
      "~/redux/*": ["../ui/src/redux/*"],
      "~/brand/*": ["../ui/src/brand/*"],
      "~/utils/*": ["../ui/src/utils/*"],
      "~/hooks/*": ["../ui/src/hooks/*"],
      "~/theme/*": ["../ui/src/theme/*"],
      "~/icons/*": ["../ui/src/icons/*"],
      "~/layout/*": ["../ui/src/layout/*"],
      "~/components/*": ["../ui/src/components/*"],
      "~/illustrations/*": ["../ui/src/illustrations/*"],
      "~/entities/*": ["../ui/src/entities/*"],
      "~/types/*": ["../ui/src/types/*"],
      "~/common/*": ["../../apps/web/src/common/*"]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
