{
  "extends": "@storiny/tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      // @storiny/ui
      "~/redux/*": ["../../packages/ui/src/redux/*"],
      "~/brand/*": ["../../packages/ui/src/brand/*"],
      "~/utils/*": ["../../packages/ui/src/utils/*"],
      "~/hooks/*": ["../../packages/ui/src/hooks/*"],
      "~/theme/*": ["../../packages/ui/src/theme/*"],
      "~/icons/*": ["../../packages/ui/src/icons/*"],
      "~/layout/*": ["../../packages/ui/src/layout/*"],
      "~/components/*": ["../../packages/ui/src/components/*"],
      "~/illustrations/*": ["../../packages/ui/src/illustrations/*"],
      "~/entities/*": ["../../packages/ui/src/entities/*"],
      "~/types/*": ["../../packages/ui/src/types/*"]
    }
  }
}
